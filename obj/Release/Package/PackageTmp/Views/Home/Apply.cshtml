

@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_ MainLayout.cshtml";
}

<h2>التقديم الي الوظيفة</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        

        <div>
            @{ 
                if (ViewBag.Result !=null)
                {
                    <h3>@ViewBag.Result</h3>
                }
            }
        </div>


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group  alert alert-danger ">
            @Html.Label("Messags","رسالة عن المتقدم الي الوظيفة", htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-4">
                @Html.TextArea("Messags", new { htmlAttributes= new { @class = "form-control" } })
                @Html.ValidationMessage("Messags", "", new { @class = "text-danger" })
            </div>
        </div>

        
        

        <div class="form-group">
            <div class="col-md-offset-6 col-md-offset-8">
                <input type="submit" value="تاكيد" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
