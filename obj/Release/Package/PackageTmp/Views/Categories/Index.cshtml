@model IEnumerable<workjop.Models.Category>

@{
    ViewBag.Title = "قائمة انواع الوظائف ";
    Layout = "~/Views/Shared/_ MainLayout.cshtml";
}

<h2>قائمة انواع الوظائف</h2>

<p>
    @Html.ActionLink("انشاء نوع جديد", "Create",null, new { @class = "btn btn-primary " })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
           
            <td>
                @Html.ActionLink("تعديل  ", "Edit",new { id = item.ID },new{ @class = "btn btn-primary " })
                @Html.ActionLink("تفاصيل  ", "Details",new { id = item.ID },new{ @class = "btn btn-success" })
                @Html.ActionLink(" حذف ", "Delete", new{ id = item.ID },new{ @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

