@model workjop.Models.Job

@{
    ViewBag.Title = "تفاصيل";
    Layout = "~/Views/Shared/_ MainLayout.cshtml";
}

<h2>تفاصيل الوظيفة</h2>

<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JopTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JopTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(Model=>Model.JobImage)"class="thumbnail" style="width:100px;height:100px;"  />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("تعديل ", "Edit", new { id = Model.Id }, new { @class = "btn btn-success " })
    @Html.ActionLink("العودة الي قائمة الوظائف ", "Index", new { id = Model.Id}, new { @class = "btn btn-primary " })
</p>
